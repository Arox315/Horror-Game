var is_ready: bool = false

@export var color: Color = Color.WHITE:
	set(value):
		color = value
		if is_ready:
			get_active_material(0).albedo_color = color
	get:
		return color


func _ready() -> void:
	top_level = true
	set_physics_interpolation_mode(Node.PHYSICS_INTERPOLATION_MODE_OFF)
	if not get_active_material(0):
		material_override = StandardMaterial3D.new()
	get_active_material(0).albedo_color = color
	is_ready = true


func generate_new_color() -> void:
	color = Color(RandomColorGenerator.rand_hex())
